#!/bin/bash

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# ğŸ§™ THE LAUNCHPAD â€” Multi-tool interactive launcher
# https://github.com/yourwizardstack/terminal-magic
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

# ğŸŒˆ Color palette
RED="\033[1;31m"
GREEN="\033[1;32m"
YELLOW="\033[1;33m"
CYAN="\033[1;36m"
RESET="\033[0m"

# ğŸ” Check if command exists
check_cmd() {
    command -v "$1" >/dev/null 2>&1
}

# ğŸš€ Launch with feedback
launch() {
    if check_cmd "$1"; then
        echo -e "${GREEN}â†’ Launching $1...${RESET}"
        "$1" "${@:2}" &
    else
        echo -e "${RED}âœ– $1 is not installed or found in PATH.${RESET}"
    fi
}

# ğŸŒ Browsers Menu
browsers_menu() {
    echo -e "${CYAN}\nğŸŒ Pick a browser:${RESET}"
    select browser in chrome chromium firefox ungoogled lynx w3m win-chrome edge "â¬… Back" "âŒ Quit"; do
        case $browser in
            "âŒ Quit") echo -e "${YELLOW}ğŸ‘‹ Bye!${RESET}"; exit 0 ;;
            "â¬… Back") return ;;
            "") echo -e "${RED}âš ï¸ Invalid choice${RESET}";;
            *) launch "$browser" && break ;;
        esac
    done
}

# ğŸ›  Apps Menu
apps_menu() {
    echo -e "${YELLOW}\nğŸ›  Pick an app or tool:${RESET}"
    select app in vscode notepadpp explorer "â¬… Back" "âŒ Quit"; do
        case $app in
            "âŒ Quit") echo -e "${YELLOW}ğŸ‘‹ Bye!${RESET}"; exit 0 ;;
            "â¬… Back") return ;;
            "") echo -e "${RED}âš ï¸ Invalid choice${RESET}";;
            *) launch "$app" && break ;;
        esac
    done
}

# ğŸ§™ Main Menu
main_menu() {
    while true; do
        echo -e "${CYAN}\nğŸ› What do you want to launch?${RESET}"
        select choice in "ğŸŒ Browsers" "ğŸ›  Apps/Tools" "âŒ Exit"; do
            case $choice in
                "ğŸŒ Browsers") browsers_menu ;;
                "ğŸ›  Apps/Tools") apps_menu ;;
                "âŒ Exit") echo -e "${YELLOW}ğŸ‘‹ Bye!${RESET}"; exit 0 ;;
                *) echo -e "${RED}âš ï¸ Invalid selection${RESET}" ;;
            esac
            break
        done
    done
}

# ğŸŒ€ Execute the magic
main_menu

